<Application x:Class="Mario.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Mario"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Style/Colors.xaml"/>
                <ResourceDictionary Source="Style/Buttons.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <ImageBrush x:Key="Cover" ImageSource="Images/cover.jpeg"/>
            <BitmapImage x:Key="Title" UriSource="Images/felirat.png"/>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
